<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.nz.nomadzip.review.query.mapper.ReviewQueryMapper">

    <select id="findByLodgingId"
            resultType="com.nz.nomadzip.review.query.dto.response.ReviewResponse">
        SELECT
            r.user_id    AS userId,
            r.review_content AS content,
            r.rating         AS rating
        FROM review r
        WHERE r.lodging_id = #{lodgingId}
        ORDER BY r.review_id DESC
    </select>

</mapper>
